@page
@model ECommerce.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top">
                <div class="card-body">
                    <h5>@product.Name</h5>
                    <p>@product.Price.ToString("C")</p>
                    <a asp-page="/ProductDetail" asp-route-id="@product.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>